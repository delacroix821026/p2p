        VALUES
        (#{reId,jdbcType=VARCHAR},#{reLndId,jdbcType=VARCHAR},#{reMtd,jdbcType=VARCHAR},#{reProId,jdbcType=VARCHAR},#{reProNmae,jdbcType=VARCHAR},#{reProLmt,jdbcType=NUMERIC},#{crtRe,jdbcType=NUMERIC},#{createDate,jdbcType=DATE},#{expireDate,jdbcType=DATE},#{reBef,jdbcType=NUMERIC},#{reAft,jdbcType=NUMERIC},#{status,jdbcType=NUMERIC},#{crtInterest,jdbcType=NUMERIC},#{serMoney,jdbcType=NUMERIC},#{otherMoney,jdbcType=NUMERIC},#{totleMoney,jdbcType=NUMERIC},#{debitId,jdbcType=VARCHAR})
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.newland.financial.p2p.domain.entity.RepayALoan">
        UPDATE T_REPAYALOAN SET RE_LND_ID = #{reLndId,jdbcType=VARCHAR},RE_MTD = #{reMtd,jdbcType=VARCHAR},RE_PRO_ID = #{reProId,jdbcType=VARCHAR},RE_PRO_NAME = #{reProNmae,jdbcType=VARCHAR},RE_PRO_LMT = #{reProLmt,jdbcType=NUMERIC},CRT_RE = #{crtRe,jdbcType=NUMERIC},CREATE_DATE = #{createDate,jdbcType=DATE},EXPIRE_DATE = #{expireDate,jdbcType=DATE},RE_BEF = #{reBef,jdbcType=NUMERIC},RE_AFT = #{reAft,jdbcType=NUMERIC},STATUS = #{status,jdbcType=NUMERIC},CRT_INTEREST = #{crtInterest,jdbcType=NUMERIC},SER_MONEY = #{serMoney,jdbcType=NUMERIC},OTHER_MONEY = #{otherMoney,jdbcType=NUMERIC},TOTLE_MONEY = #{totleMoney,jdbcType=NUMERIC},DEBIT_ID = #{debitId,jdbcType=VARCHAR} WHERE RE_ID = #{reId,jdbcType=VARCHAR}
    </update>
    
    <delete id="deleteByPropertie" parameterType="Map">
        DELETE FROM T_REPAYALOAN
        <where>
            <if Test="userId != null and userId != ''">
                and RE_LND_ID = #{userId}
           </if>
        </where>
    </delete>

