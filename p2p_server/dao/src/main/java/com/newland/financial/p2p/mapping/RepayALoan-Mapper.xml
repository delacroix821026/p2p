    <sql id="Base_Column_List">
        RE_ID,RE_LND_ID,RE_MTD,RE_PRO_ID,RE_PRO_NAME,RE_PRO_LMT,CRT_RE,CREATE_DATE,EXPIRE_DATE,RE_BEF,RE_AFT,STATUS,CRT_INTEREST,SER_MONEY,OTHER_MONEY,TOTLE_MONEY,DEBIT_ID
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from T_REPAYALOAN
        where RE_ID = #{reId,jdbcType=VARCHAR}
    </select>

    <select id="selectByPropertie" resultMap="BaseResultMap" parameterType="Map">
        select
        <include refid="Base_Column_List"/>
        from T_REPAYALOAN
        where
        RE_LND_ID = #{userId}
        ORDER BY CREATE_DATE
    </select>

    <select id="selectByProperties" resultType="java.math.BigDecimal" parameterType="Map">
        select
        sum(TOTLE_MONEY)
        from T_REPAYALOAN
        <where>
            <if Test="userId != null and userId != ''">
                and RE_LND_ID = #{userId}
            </if>
            <if Test="status != null">
                and STATUS = #{status}
            </if>
            <if Test="payDate != null">
                and CREATE_DATE &lt;= #{payDate}
            </if>
            ORDER BY CREATE_DATE
        </where>
    </select>

    <select id="selectByProperty" resultType="java.math.BigDecimal" parameterType="Map">
        select
        sum(TOTLE_MONEY)
        from T_REPAYALOAN
        <where>
                and RE_LND_ID = #{userId}
            <if Test="status != null">
                and STATUS = #{status}
            </if>
        </where>
    </select>

